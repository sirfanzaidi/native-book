# Server Configuration (Python/FastAPI)
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
LOG_LEVEL=INFO

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=mistralai/devstral-2512:free

# Qdrant Vector Store Configuration
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=book_embeddings
QDRANT_VECTOR_SIZE=384
QDRANT_DISTANCE=Cosine

# Neon Serverless Postgres Configuration
NEON_DATABASE_URL=postgresql://user:password@host.region.neon.tech/dbname?sslmode=require
NEON_POOL_MIN_SIZE=1
NEON_POOL_MAX_SIZE=10

# Embedding Model Configuration
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu

# Chunking Configuration
CHUNK_SIZE_MIN=512
CHUNK_SIZE_MAX=1024
CHUNK_OVERLAP_PERCENT=20

# RAG Retrieval Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# Rate Limiting Configuration
RATE_LIMIT_SUSTAINED_QPS=2
RATE_LIMIT_BURST_QPS=10
RATE_LIMIT_WINDOW_SECONDS=60

# Caching Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=100

# Session Configuration
SESSION_EXPIRY_HOURS=24
SESSION_CLEANUP_INTERVAL_MINUTES=60

# CORS Configuration (comma-separated strings, NOT JSON arrays)
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourusername.github.io
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,OPTIONS
CORS_ALLOW_HEADERS=*

# Performance Monitoring
LATENCY_P95_TARGET_MS=3000
LATENCY_P99_TARGET_MS=5000
